<div class="form-group">
  <label for="title" class="title">Title </label>
  <input
    required
    value="<%= article.title %>"
    type="text"
    name="title"
    id="title"
    class="form-control"
  />
</div>

<div class="form-group">
  <label for="title" class="title">Description</label>
  <textarea name="description" id="description" class="form-control">
<%= article.description %></textarea
  >
</div>

<div class="form-group">
  <label for="title" class="title">Markdown</label>
  <textarea required name="markdown" id="markdown" class="form-control">
<%= article.markdown %></textarea
  >
</div>

<a href="/" class="btn btn-danger">CANCEL</a>
<button type="submit" class="btn btn-primary">SAVE</button>
